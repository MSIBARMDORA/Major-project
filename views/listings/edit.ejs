<% layout("/layouts/boilerplate") %>
    <h3>Edit istings</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
        <div class="mb-3"> <label for="title" class="form-label">Title</label>
            <input type="text" placeholder="enter title" value="<%= listing.title %>" name="listing[title]"
                class="form-control" required>
            <div class="invalid-feedback">Enter Title</div>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Description</label>
            <textarea type="text" placeholder="enter description" name="listing[description]" class="form-control"
                required><%= listing.description %></textarea>
            <div class="invalid-feedback">Enter Description</div>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Image-Link</label>
            <input type="image" placeholder="enter imageg" value="<%= listing.image %>" name="listing[image]"
                class="form-control" required>
            <div class="invalid-feedback">Enter Image</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="title" class="form-label">Price</label>
                <input type="number" placeholder="enter price" value="<%= listing.price %>" name="listing[price]"
                    class="form-control" required>
                <div class="invalid-feedback">Enter Price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="title" class="form-label">Country</label>
                <input type="text" placeholder="enter country" value="<%= listing.country %>" name="listing[country]"
                class="form-control" required>
                <div class="invalid-feedback">Enter image</div>
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Location</label>
                <input type="text" placeholder="enter location" value="<%= listing.location %>" name="listing[location]"
                    class="form-control" required>
                <div class="invalid-feedback">Enter Location</div>
            </div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>